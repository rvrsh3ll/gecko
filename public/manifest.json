{
  "manifest_version": 3,
  "name": "Gecko",
  "description": "Automated CSPT discovery tool",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "js/sw.js",
    "scripts": ["js/sw.js"]
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "storage",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "gecko@gecko.xyz"
    }
  },
  "icons": {
    "48": "icons/gecko-48.png",
    "96": "icons/gecko-96.png"
  }
}
